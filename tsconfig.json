{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": false,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "./lib",
		"baseUrl": ".",
		"allowJs": true,
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"typeRoots": ["./typings", "./node_modules/@types/"],
	"include": ["src/**/*"]
}
